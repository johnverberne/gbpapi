<?xml version='1.0' encoding='utf-8'?>
<!-- Example context.xml for AERIUS GeoServer applications. Copy these files 
     to the application server project and set the correct configuration
     username, password and database url -->
<Context>
  <Resource
   name="jdbc/AeriusDBMonitor" auth="Container"
   type="javax.sql.DataSource"
   username="[username]"
   password="[password]" 
   driverClassName="org.postgresql.Driver"
   url="jdbc:postgresql://localhost/monitor"
   maxActive="64"
   maxIdle="16"
   maxAge="180000" />
